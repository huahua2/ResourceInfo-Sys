      <h2 class="sub-header">添加专家</h2>
      <div  style="max-width:500px;margin-top:30px;">

          <form class="form-horizontal" action="" method="post">
              <div class="form-group">
                  <label for="name" class="col-sm-2 control-label">姓名</label>
                  <div class="col-sm-10">
                      <input type="text" class="form-control" id="name" placeholder="姓名" autofocus required>
                  </div>
              </div>
              <div class="form-group">
                  <label for="zhiwu" class="col-sm-2 control-label">职务</label>
                  <div class="col-sm-10">
                      <input type="text" class="form-control" id="zhiwu" placeholder="职务">
                  </div>
              </div>
              <div class="form-group">
                  <label for="shouji" class="col-sm-2 control-label">手机</label>
                  <div class="col-sm-10">
                      <input type="tel" class="form-control" id="shouji" placeholder="手机">
                  </div>
              </div>
              <div class="form-group">
                  <label for="bgdh" class="col-sm-2 control-label">办公电话</label>
                  <div class="col-sm-10">
                      <input type="tel" class="form-control" id="bgdh" placeholder="办公电话" required >
                  </div>
              </div>
              <div class="form-group">
                  <label for="yx" class="col-sm-2 control-label">Email</label>
                  <div class="col-sm-10">
                      <input type="email" class="form-control" id="yx" placeholder="Email" required>
                  </div>
              </div>
              <div class="form-group">
                  <label for="zhicheng" class="col-sm-2 control-label">头像</label>
                  <div class="col-sm-10">

                      <div style="width: 140px; height: 140px;position: relative">
                          <img  class="img-thumbnail" alt="点击上传" src="data:image/svg+xml;base64," data-holder-rendered="true" style="width: 140px; height: 140px;">
                          <input type="file" id="headfile" name="headfile" style="width: 140px; height: 140px;position: absolute;top:0;left: 0;opacity:0;" title="点击上传">
                      </div>


                  </div>
              </div>
              <!--<div class="form-group">-->
